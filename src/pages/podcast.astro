---
import Layout from '../layouts/Layout.astro';
import { Podcast, Youtube, Mic } from 'lucide-react';

export const prerender = true;

// Placeholder data - in a real app this would come from an API
const episodes = [
    {
        title: "Episode 1: Warum Keramikversiegelung?",
        desc: "Wir sprechen über die Vorteile und Mythen rund um Keramikbeschichtungen.",
        duration: "24 Min",
        date: "15. März 2024"
    },
    {
        title: "Episode 2: Leasing-Rückgabe ohne Stress",
        desc: "Tipps und Tricks, wie Sie bei der Rückgabe hunderte Euro sparen.",
        duration: "32 Min",
        date: "28. März 2024"
    },
     {
        title: "Episode 3: Innenraum-Hygiene & Ozon",
        desc: "Alles über Geruchsentfernung und warum 'Neu' nicht immer sauber heißt.",
        duration: "19 Min",
        date: "10. April 2024"
    }
];
---

<Layout title="Podcast | RG Detailing" description="Der Fahrzeugpflege-Podcast aus Schleswig-Holstein. Expertentipps zu Keramikversiegelung, Leasing und Autopflege.">
    <div class="relative min-h-[50vh] flex items-center justify-center overflow-hidden">
         <div class="absolute inset-0 bg-gradient-to-b from-zinc-900 via-zinc-950 to-black z-0"></div>
         <div class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1478737270239-2f02b77ac6d5?q=80&w=2000&auto=format&fit=crop')] bg-cover bg-center opacity-20 mix-blend-overlay"></div>

         <div class="relative z-10 text-center px-4 max-w-4xl mx-auto mt-20">
            <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/5 border border-white/10 text-red-500 font-bold uppercase tracking-widest text-xs mb-6 backdrop-blur-sm">
                <Mic className="w-4 h-4" /> Jetzt Hören
            </div>
            <h1 class="text-5xl md:text-7xl font-bold text-white mb-6 tracking-tight">RG Detailing <span class="text-red-600">Podcast</span></h1>
            <p class="text-xl text-zinc-400 mb-10 leading-relaxed max-w-2xl mx-auto">
                Tiefgründige Gespräche über Lack, Leder und Leidenschaft. Erfahren Sie alles über professionelle Fahrzeugaufbereitung direkt vom Experten.
            </p>
            <div class="flex flex-wrap justify-center gap-4">
                <a href="https://open.spotify.com/show/63m3iI02yHqeENGb2CtBwa?si=d07c55fca4b843bc" target="_blank" rel="noopener noreferrer" class="flex items-center gap-3 px-8 py-4 bg-[#1DB954] hover:bg-[#1ed760] text-black font-bold rounded-xl transition-all hover:-translate-y-1 shadow-[0_0_20px_rgba(29,185,84,0.3)]">
                    <Podcast className="w-6 h-6" /> Auf Spotify hören
                </a>
                <a href="https://www.youtube.com/channel/UC-_u0Tc9YmcniT7Q93XPRwg" target="_blank" rel="noopener noreferrer" class="flex items-center gap-3 px-8 py-4 bg-[#FF0000] hover:bg-[#ff3333] text-white font-bold rounded-xl transition-all hover:-translate-y-1 shadow-[0_0_20px_rgba(255,0,0,0.3)]">
                    <Youtube className="w-6 h-6" /> Auf YouTube ansehen
                </a>
            </div>
         </div>
    </div>

    <section class="py-24 bg-black relative">
        <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold text-white mb-12 text-center">Aktuelle Episoden</h2>

            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                {episodes.map(ep => (
                    <article class="bg-zinc-900/30 border border-white/5 rounded-3xl p-8 hover:border-red-500/30 hover:bg-zinc-900/50 transition-all group">
                        <div class="flex justify-between items-start mb-6">
                            <span class="text-zinc-500 text-xs font-bold uppercase tracking-wider border border-white/10 px-2 py-1 rounded">{ep.date}</span>
                            <span class="text-zinc-500 text-xs font-bold flex items-center gap-1"><Mic className="w-3 h-3" /> {ep.duration}</span>
                        </div>
                        <h3 class="text-2xl font-bold text-white mb-4 group-hover:text-red-500 transition-colors">{ep.title}</h3>
                        <p class="text-zinc-400 leading-relaxed mb-8">{ep.desc}</p>
                        <div class="flex items-center gap-4 pt-6 border-t border-white/5">
                            <a href="https://open.spotify.com/show/63m3iI02yHqeENGb2CtBwa" target="_blank" class="text-sm font-bold text-white hover:text-green-500 transition-colors flex items-center gap-2">
                                <Podcast className="w-4 h-4" /> Anhören
                            </a>
                        </div>
                    </article>
                ))}
            </div>
        </div>
    </section>
</Layout>
