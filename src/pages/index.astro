        </section>

        {/* GALLERY GRID */}
        <section class="py-20">
             <div class="container mx-auto px-4">
                <h2 class="text-3xl font-bold text-white mb-8 text-center">Ergebnisse</h2>
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
