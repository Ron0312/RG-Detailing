---
import Layout from '../layouts/Layout.astro';
import BeforeAfterSlider from '../components/BeforeAfterSlider.jsx';
import PriceCalculator from '../components/PriceCalculator.jsx';
import Reviews from '../components/Reviews.astro';
import About from '../components/About.astro';
import { getCollection } from 'astro:content';
import { services } from '../data/services';

const cities = await getCollection('cities');
---

<Layout title="Premium Fahrzeugaufbereitung" description="Ihr Experte für Lackveredelung und Keramikversiegelung in Tensfeld, Bad Segeberg und Umgebung.">
    {/* Hero Section */}
    <div class="relative bg-slate-900 overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-br from-blue-900/20 to-purple-900/20 -z-10"></div>
        <div class="container mx-auto px-4 py-24 md:py-32 text-center">
            <h1 class="text-5xl md:text-7xl font-bold mb-6 tracking-tighter text-white">
                Fahrzeugaufbereitung <br/>
                <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-500">auf höchstem Niveau</span>
            </h1>
            <p class="text-xl md:text-2xl text-slate-300 max-w-2xl mx-auto mb-10">
                Ihr Experte für Detailing, Lackveredelung und Werterhalt in Tensfeld.
            </p>
            <div class="flex flex-col md:flex-row justify-center gap-4">
                <a href="#rechner" class="bg-blue-600 hover:bg-blue-700 text-white px-8 py-4 rounded-full font-bold text-lg transition shadow-lg shadow-blue-900/50">
                    Preis jetzt berechnen
                </a>
                <a href="#leistungen" class="bg-slate-800 hover:bg-slate-700 text-white px-8 py-4 rounded-full font-bold text-lg transition border border-slate-700">
                    Unsere Leistungen
                </a>
            </div>
        </div>
    </div>

    <About />

    <main class="container mx-auto px-4 py-12">
        {/* Cities Links */}
        <div class="mb-20 text-center">
            <h2 class="text-xl text-slate-400 mb-6 uppercase tracking-widest">Unser Einzugsgebiet</h2>
            <div class="flex flex-wrap justify-center gap-4">
                {cities.map(city => (
                    <a href={`/${city.data.slug}`} class="px-6 py-2 rounded-full border border-slate-700 hover:border-blue-500 hover:text-blue-400 transition text-slate-300">
                        {city.data.name}
                    </a>
                ))}
            </div>
        </div>

        {/* Services */}
        <div id="leistungen" class="mb-24 scroll-mt-24">
            <div class="text-center mb-12">
                <h2 class="text-3xl font-bold text-white mb-4">Unsere Leistungen</h2>
                <p class="text-slate-400">Perfekt auf Ihre Bedürfnisse abgestimmt.</p>
            </div>
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                 {services.map(service => (
                     <div class="p-6 bg-slate-800 rounded-xl border border-slate-700 hover:border-blue-500 transition group">
                        <div class="text-blue-500 mb-4 group-hover:scale-110 transition-transform">
                            {/* Simple Icon Placeholder based on name */}
                             <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>
                        </div>
                        <h3 class="text-xl font-bold text-white mb-2">{service.title}</h3>
                        <p class="text-slate-400">{service.description}</p>
                     </div>
                 ))}
            </div>
        </div>

        {/* Visual Storytelling */}
        <div class="mb-24">
             <h2 class="text-3xl font-bold mb-8 text-center text-white">Ergebnisse, die begeistern</h2>
             <div class="max-w-4xl mx-auto">
                <BeforeAfterSlider
                    client:visible
                    beforeImage="https://rg-detailing.de/wp-content/uploads/2023/01/Fahrzeugaufbereitung-vorher-nacher-1.jpg"
                    afterImage="https://rg-detailing.de/wp-content/uploads/2023/01/Fahrzeugaufbereitung-vorher-nacher-2.jpg"
                    alt="Aufbereitung Vorher Nachher"
                />
            </div>
        </div>

        {/* Calculator */}
        <div id="rechner" class="scroll-mt-24 mb-12">
             <div class="text-center mb-10">
                <h2 class="text-3xl font-bold mb-4 text-white">Preisrechner</h2>
                <p class="text-slate-400">Transparente Preise für Ihr Fahrzeug.</p>
            </div>
            <PriceCalculator client:visible />
        </div>
    </main>

    <Reviews />
</Layout>
