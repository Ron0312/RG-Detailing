---
import Layout from '../layouts/Layout.astro';
import BeforeAfterSlider from '../components/BeforeAfterSlider.jsx';
import PriceCalculator from '../components/PriceCalculator.jsx';
import Reviews from '../components/Reviews.astro';
import About from '../components/About.astro';
import { getCollection } from 'astro:content';
import { services } from '../data/services';

const cities = await getCollection('cities');
---

<Layout title="Premium Fahrzeugaufbereitung" description="Ihr Experte für Lackveredelung und Keramikversiegelung in Tensfeld, Bad Segeberg und Umgebung.">
    {/* Hero Section */}
    <div class="relative bg-zinc-950 overflow-hidden min-h-[70vh] flex items-center">
        <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-zinc-900 to-black -z-10"></div>

        {/* Subtle red glow */}
        <div class="absolute top-0 right-0 w-1/2 h-1/2 bg-red-900/10 blur-[100px] rounded-full pointer-events-none"></div>

        <div class="container mx-auto px-4 py-24 text-center">
            <h1 class="text-5xl md:text-7xl font-bold mb-6 tracking-tighter text-white">
                Schluss mit <br/>
                <span class="text-transparent bg-clip-text bg-gradient-to-r from-red-500 to-red-600">Waschanlagen-Kratzern</span>
            </h1>
            <h2 class="text-2xl md:text-3xl font-bold text-zinc-200 mb-6">
                Werterhalt durch Handarbeit – Premium Detailing in Tensfeld.
            </h2>
            <p class="text-lg md:text-xl text-zinc-400 max-w-2xl mx-auto mb-10 leading-relaxed">
                Ihr Auto ist kein Gebrauchsgegenstand, sondern ein Wert. Bei RG Detailing erleben Sie den Unterschied zwischen einer 15€ Wäsche und echter Handwerkskunst. Für Glanz, der bleibt.
            </p>
            <div class="flex flex-col md:flex-row justify-center gap-4">
                <a href="#rechner" class="bg-red-700 hover:bg-red-600 text-white px-8 py-4 rounded-full font-bold text-lg transition shadow-lg shadow-red-900/30 hover:scale-105 transform">
                    Jetzt Fahrzeugwert berechnen
                </a>
                <a href="#leistungen" class="bg-zinc-800 hover:bg-zinc-700 text-white px-8 py-4 rounded-full font-bold text-lg transition border border-zinc-700 hover:border-zinc-600">
                    Unsere Leistungen
                </a>
            </div>
        </div>
    </div>

    <About />

    <main class="container mx-auto px-4 py-12">
        {/* Cities Links */}
        <div class="mb-20 text-center">
            <h2 class="text-xl text-zinc-500 mb-6 uppercase tracking-widest text-sm font-bold">Unser Einzugsgebiet</h2>
            <div class="flex flex-wrap justify-center gap-3">
                {cities.map(city => (
                    <a href={`/${city.data.slug}`} class="px-5 py-2 rounded-full border border-zinc-800 bg-zinc-900/50 hover:border-red-500/50 hover:text-white transition text-zinc-400 text-sm">
                        {city.data.name}
                    </a>
                ))}
            </div>
        </div>

        {/* Services */}
        <div id="leistungen" class="mb-24 scroll-mt-24">
            <div class="text-center mb-16">
                <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Unsere Leistungen</h2>
                <div class="w-20 h-1 bg-red-600 mx-auto rounded-full mb-6"></div>
                <p class="text-zinc-400 max-w-2xl mx-auto">Von der Handwäsche bis zur High-End Keramikversiegelung. Wir nutzen nur zertifizierte Produkte.</p>
            </div>
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                 {services.map(service => (
                     <a href={service.link} class="block p-8 bg-zinc-900 rounded-2xl border border-zinc-800 hover:border-red-500/50 transition group hover:bg-zinc-800/80">
                        <div class="text-red-600 mb-6 group-hover:scale-110 transition-transform bg-red-900/10 w-12 h-12 rounded-lg flex items-center justify-center">
                            {/* Simple Icon Placeholder based on name */}
                             <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>
                        </div>
                        <h3 class="text-xl font-bold text-white mb-3 flex items-center gap-2">
                            {service.title}
                            {service.link !== '#rechner' && <span class="text-xs bg-red-900/50 text-red-200 px-2 py-1 rounded-full">Mehr Infos &rarr;</span>}
                        </h3>
                        <p class="text-zinc-400 leading-relaxed">{service.description}</p>
                     </a>
                 ))}
            </div>
        </div>

        {/* Visual Storytelling */}
        <div class="mb-24">
             <div class="text-center mb-12">
                 <h2 class="text-3xl font-bold mb-4 text-white">Ergebnisse, die begeistern</h2>
                 <p class="text-zinc-400">Schieben Sie den Regler und sehen Sie den Unterschied.</p>
             </div>
             <div class="max-w-5xl mx-auto border-4 border-zinc-800 rounded-xl overflow-hidden shadow-2xl">
                <BeforeAfterSlider
                    client:visible
                    beforeImage="https://rg-detailing.de/wp-content/uploads/2023/01/Fahrzeugaufbereitung-vorher-nacher-1.jpg"
                    afterImage="https://rg-detailing.de/wp-content/uploads/2023/01/Fahrzeugaufbereitung-vorher-nacher-2.jpg"
                    alt="Aufbereitung Vorher Nachher"
                />
            </div>
        </div>

        {/* Calculator */}
        <div id="rechner" class="scroll-mt-24 mb-12">
             <div class="text-center mb-10">
                <h2 class="text-3xl font-bold mb-4 text-white">Preisrechner</h2>
                <div class="w-20 h-1 bg-red-600 mx-auto rounded-full mb-6"></div>
                <p class="text-zinc-400">Transparente Preise für Ihr Fahrzeug. Keine versteckten Kosten.</p>
            </div>
            <PriceCalculator client:visible />
        </div>
    </main>

    <Reviews />
</Layout>
