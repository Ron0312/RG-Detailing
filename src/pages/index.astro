    "addressLocality": "Tensfeld",
    "postalCode": "23824",
    "addressCountry": "DE"
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": 54.0667,
    "longitude": 10.3000
  },
  "url": "https://rg-detailing.de",
  "telephone": "+491633845081",
  "priceRange": "$$-$$$",
  "openingHoursSpecification": [
    {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
      "opens": "09:00",
      "closes": "18:00"
    }
  ],
  "areaServed": sortedCities.map(city => city.data.name),
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Fahrzeugaufbereitung Services",
    "itemListElement": services.map((service, index) => ({
      "@type": "Offer",
      "itemOffered": {
        "@type": "Service",
        "name": service.title,
        "description": service.description
      }
    }))
  }
};

---

<Layout
    title="Premium Fahrzeugaufbereitung Schleswig-Holstein"
    description="Ihr Experte f√ºr Lackveredelung, Keramikversiegelung und Leasing-Aufbereitung. Zertifizierter Labocosmetica Partner in Tensfeld."
