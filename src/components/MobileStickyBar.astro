---
import { Phone, Calculator, MessageCircle } from 'lucide-react';
---
<div class="fixed bottom-0 left-0 right-0 z-[100] bg-zinc-950/90 backdrop-blur-xl border-t border-white/10 p-2 md:hidden flex justify-around items-center safe-area-bottom">
    <a href="tel:+491633845081" class="flex flex-col items-center gap-1 text-zinc-400 hover:text-white transition-colors p-2 active:scale-95">
        <Phone size={20} />
        <span class="text-[10px] font-medium uppercase tracking-wide">Anrufen</span>
    </a>

    <a href="https://wa.me/491633845081" target="_blank" rel="noopener noreferrer" class="flex flex-col items-center gap-1 text-green-500 hover:text-green-400 transition-colors p-2 active:scale-95">
        <div class="bg-green-500/10 p-2 rounded-full border border-green-500/20">
            <MessageCircle size={24} className="fill-green-500 text-green-500" />
        </div>
    </a>

    <a href="/#rechner" class="flex flex-col items-center gap-1 text-zinc-400 hover:text-white transition-colors p-2 active:scale-95">
        <Calculator size={20} />
        <span class="text-[10px] font-medium uppercase tracking-wide">Rechner</span>
    </a>
</div>

<style>
    /* Ensure content isn't hidden behind the bar */
    :global(body) {
        padding-bottom: 80px; /* Adjust based on bar height */
    }
    @media (min-width: 768px) {
        :global(body) {
            padding-bottom: 0;
        }
    }
</style>
