<script>
    document.addEventListener('DOMContentLoaded', () => {
        const menuBtn = document.getElementById('mobile-menu-btn');
        const closeBtn = document.getElementById('close-menu-btn');
        const mobileMenu = document.getElementById('mobile-menu');
        const mobileLinks = document.querySelectorAll('.mobile-link');
        const header = document.getElementById('main-header');

        function toggleMenu() {
            if (mobileMenu && document.body) {
                const isClosed = mobileMenu.classList.contains('translate-x-full');

                if (isClosed) {
                    // Open menu
                    mobileMenu.classList.remove('invisible');
                    // Small delay to ensure invisible class removal is registered before transform
                    requestAnimationFrame(() => {
                        mobileMenu.classList.remove('translate-x-full');
                    });
                    document.body.classList.add('overflow-hidden');
                } else {
                    // Close menu
                    mobileMenu.classList.add('translate-x-full');
                    document.body.classList.remove('overflow-hidden');

                    // Wait for transition to finish before hiding
                    setTimeout(() => {
                        mobileMenu.classList.add('invisible');
                    }, 300);
                }
            }
        }

        menuBtn?.addEventListener('click', toggleMenu);
        closeBtn?.addEventListener('click', toggleMenu);

        mobileLinks.forEach(link => {
            link.addEventListener('click', toggleMenu);
        });

        // ScrollSpy
        const sections = ['leistungen', 'gallery', 'rechner', 'about', 'faq'];
        const navLinks = document.querySelectorAll('nav a');
        let cachedSections = [];

        function cacheSections() {
            cachedSections = sections.map(id => {
                const el = document.getElementById(id);
                return el ? { id, offsetTop: el.offsetTop } : null;
            }).filter(Boolean);
        }

        // Update cache on load and resize
        cacheSections();
        window.addEventListener('resize', cacheSections, { passive: true });

        // Smart Sticky Header Logic
        let lastScrollTop = window.scrollY || document.documentElement.scrollTop;
        let ticking = false;

        function onScroll() {
            if (!ticking) {
                window.requestAnimationFrame(() => {
                    const scrollTop = window.scrollY || document.documentElement.scrollTop;

                    // Logic:
                    // 1. If scrolling DOWN (> lastScrollTop) AND scrolled past threshold (> 100px) -> HIDE
                    // 2. If scrolling UP (< lastScrollTop) -> SHOW

                    // Only act if change is significant (delta > 5px) or we are at top
                    if (Math.abs(scrollTop - lastScrollTop) > 5 || scrollTop <= 0) {
                         if (header) {
                            if (scrollTop > lastScrollTop && scrollTop > 100) {
                                header.classList.add('-translate-y-full');
                            } else {
                                header.classList.remove('-translate-y-full');
                            }
                        }
                        lastScrollTop = scrollTop <= 0 ? 0 : scrollTop;
                    }

                    updateActiveLink();
                    ticking = false;
                });
                ticking = true;
            }
        }

        function updateActiveLink() {
            let currentSection = '';
            const scrollPosition = window.scrollY + 200; // Offset for header height

            cachedSections.forEach(section => {
                if (section.offsetTop <= scrollPosition) {
                    currentSection = section.id;
                }
            });

            navLinks.forEach(link => {
                const href = link.getAttribute('href');
                // Skip the calculator button for span animation, but we can highlight it
                if (href.includes('#rechner')) {
                     if (currentSection === 'rechner') {
                         link.classList.add('bg-red-500', 'text-white');
                         link.classList.remove('bg-red-900/20', 'text-red-500');
                     } else {
                         link.classList.remove('bg-red-500', 'text-white');
                         link.classList.add('bg-red-900/20', 'text-red-500');
                     }
                     return;
                }

                const span = link.querySelector('span');
                if (!span) return;

                link.classList.remove('text-white');
                span.style.width = '0';

                if (currentSection) {
                     if (href.includes('#' + currentSection)) {
                         link.classList.add('text-white');
                         span.style.width = '100%';
                     }
                } else {
                    // If no section matches and we are near top, it's Startseite
                    if ((href === '/' || href === '/#') && window.scrollY < 300) {
                         link.classList.add('text-white');
                         span.style.width = '100%';
                    }
                }
            });
        }

        window.addEventListener('scroll', onScroll, { passive: true });
        // Initial call
        updateActiveLink();
    });
</script>
