---
import '../styles/global.css';
import '@fontsource/syne';
import '@fontsource/inter';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import LocalSchema from '../components/LocalSchema.astro';

interface Props {
	title: string;
    description?: string;
    schema?: object;
}

const { title, description = "Premium Fahrzeugaufbereitung in Schleswig-Holstein", schema } = Astro.props;
---
<!doctype html>
<html lang="de" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
        <meta name="description" content={description} />
		<title>{title} | RG Detailing</title>
        {schema && <script type="application/ld+json" set:html={JSON.stringify(schema)} />}
        <LocalSchema />
	</head>
	<body class="bg-black text-zinc-100 antialiased min-h-screen flex flex-col selection:bg-red-600 selection:text-white">
        <Header />
        <div class="flex-grow">
		    <slot />
        </div>
        <Footer />
	</body>
</html>
